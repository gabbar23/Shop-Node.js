<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<% if(editing){%>edit-product <%} else {%>add-product<%} %>"
            method="POST">
            <div class="form-control">
                <label for="title">Title</label> %>
                <input type="text" name="title" id="title" placeholder="Pokemon Figurine" required
                    value="<% if(editing){%><%=product.title %><% }%> ">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image Url</label>
                <input type="text" name="imageUrl" id="imageUrl" placeholder="www.pokemon420x420.jpeg" required
                    value="<% if(editing){%><%=product.imageUrl %><% }%> ">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" placeholder="20$" required
                    value="<% if(editing){%><%=product.price %><% }%> ">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name=description id="description" cols="30" rows="5"
                    placeholder="Very nice figurine art piece"
                    required><% if(editing){%><%=product.description %><% }%></textarea>
                <input type="text" name="id" id="id" value="<% if(editing){%><%= product._id %><% }%>" hidden>

            </div>


            <button class="btn" type="submit"><% if (editing) { %>
                Update Product
                <% } else{%> Add Product <%} %> </button>
        </form>
    </main>
    <%- include('../includes/end.ejs') %>